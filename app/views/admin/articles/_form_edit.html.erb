<%= semantic_form_for [:admin, @article], builder: Formtastic::FormBuilder do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :body, as: :ckeditor %>
    <hr>
  <% end %>
  <%= f.actions %>
<% end %>

<% if @article.photos %>
  <% @article.photos.each do |photo| %>
    <%= semantic_form_for [:admin, photo], builder: Formtastic::FormBuilder do |t| %>
    <%= t.semantic_errors %>
      <%= t.inputs do %>
        <%= t.input :featured %>
        <%= t.input :description %>
        <%= image_tag photo.image.thumbnail %>
        <%= link_to "Delete", admin_photo_path( photo.id ), method: :delete %>
        <hr>
      <% end %>
      <%= t.actions %>
    <% end %>
  <% end %>
<% end %>



<%= semantic_form_for [:admin, @article.photos.new], builder: Formtastic::FormBuilder do |k| %>
  <%= k.semantic_errors %>
  <%= k.inputs do %>
    <%= k.input :description %>
    <%= k.input :featured %>
    <%= k.input :article %>
    <%= k.input :image %>
  <% end %>
  <%= k.actions %>
<% end %>
